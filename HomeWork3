//Создайте цикл, который умножает каждое число в массиве на два.

var numbers2 = [1, 2, 3, 4, 5]

for i in 0..<numbers2.count {
    numbers2[i] *= 2
}

print(numbers2)
 

//Разработайте программу, которая с помощью switch выводит количество дней в каждом месяце.

let month = "Февраль"

switch month {
case "Январь", "Март", "Май", "Июль", "Август", "Октябрь", "Декабрь":
    print("\(month) — 31 день")
case "Апрель", "Июнь", "Сентябрь", "Ноябрь":
    print("\(month) — 30 дней")
case "Февраль":
    print("\(month) — 28 или 29 дней (в зависимости от високосного года)")
default:
    print("Неизвестный месяц")
}
